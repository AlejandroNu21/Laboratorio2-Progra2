<div class="text-center">
    <h1 style="color: cornflowerblue" class=" animate__animated animate__jello">LISTADO DE INFORMACION</h1>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />


    <style>
        h1 {
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
            font-size: 35px;
            color: firebrick
        }
    </style>
</div>


<table id="ListaPersona" class="table table-warning table-striped animate_animated animate_fadeInDown">
    <thead>
        <tr>
            <th>
                Id personas
            </th>
            <th>
                Nombre Persona
            </th>
            <th>
                Edad Persona
            </th>
            <th>
                Descripcion Persona
            </th>
        </tr>
    </thead>

</table>



@section scripts{

    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>
    $(document).ready(function () {

            var tabla = $('#ListaPersona').DataTable({
                "ajax": {
                    "url": '/Home/GetAll',
                    "type": "get",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "idPersona", "name": "idPersona", "autoWidth": true },
                    { "data": "nombrePersona", "name": "nombrePersona", "autoWidth": true },
                    { "data": "edadPersona", "name": "edadPersona", "autoWidth": true },
                    { "data": "descripcionPersona", "name": "descripcionPersona", "autoWidth": true }

                ]


            })
        })</script>

}